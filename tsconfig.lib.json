{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["vite-env.d.ts", "lib/**/*.ts"]
}
